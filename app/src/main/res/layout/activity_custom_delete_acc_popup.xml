<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="18dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="22dp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/popupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <!-- Message -->
        <TextView
            android:id="@+id/popupMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your password to continue."
            android:textSize="15sp"
            android:textColor="#6E6E6E"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E8E8"
            android:layout_marginBottom="18dp"/>

        <!-- Password Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:textColorHint="@color/dark_pink"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/dark_pink"
            app:hintTextColor="@color/dark_pink"
            app:boxStrokeColor="@color/dark_pink"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/CancelButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                app:rippleColor="@color/background_pink"
                android:textSize="15sp"
                app:cornerRadius="0dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/dark_pink"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="10dp"/>

            <!-- Confirm Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ConfirmButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:background="@color/dark_pink"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
